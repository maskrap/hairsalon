<h1>Stylist: <%= @stylist.name() %> </h1>

<h3>Add a client:</h3>

<div class="container">
  <form action="/stylists/<%= @stylist.id() %>" method="post">
    <label for="client_name">Name:</label>
    <input id="client_name" name="client_name" type="text">

    <button type="submit" class="btn btn-primary-outline">Add Client</button>
  </form>
</div>

<div class="container">
  <% if @clients.any?() %>
    <h5>Click on a client to update their information:</h5>

    <ul>
      <% @clients.each do |client| %>
      <li>
        <a href="/clients/<%= client.id() %>"><%= client.name() %></a>

      </li>
      <% end %>
    </ul>

  <% else %>
    <p>There are no clients because they cancelled after trying your food! Add some more clients!</p>
  <% end %>

  <form action="/stylists/delete/" method="post">
  <input name="_method" type="hidden" value="delete">

  <label for="client_id">Delete a Client</label>
  <select id='client_id' name='client_id' type='text'>
    <% @clients.each() do |client| %>
    <option value="<%= client.id()%>"> <%= client.name() %> </option>
    <% end %>
  </select>

  <button class="btn">Delete Client</button>
</form>

</div>
